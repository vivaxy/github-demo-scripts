{
  "name": "@vivaxy/github-demo-scripts",
  "version": "0.0.0",
  "description": "Created by create-n",
  "bin": {
    "gds": "lib/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "ava",
    "coverage": "nyc npm run test && nyc report --reporter=html && nyc report --reporter=lcov > coverage.lcov",
    "release:beta": "npm run coverage && standard-version --prerelease beta && npm publish --tag beta && git push --follow-tags",
    "release": "npm run coverage && standard-version && npm publish && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vivaxy/github-demo-scripts.git"
  },
  "author": "vivaxy <xyxuye2007@126.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vivaxy/github-demo-scripts/issues"
  },
  "homepage": "https://github.com/vivaxy/github-demo-scripts#readme",
  "lint-staged": {
    "*.{js,ts,css,less,json,md,html,yml,yaml,pcss,jsx,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "ava": {
    "files": [
      "src/**/__tests__/**/*.ts"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/cheerio": "^0.22.11",
    "@types/cosmiconfig": "^5.0.3",
    "@types/fs-extra": "^8.0.0",
    "@types/yargs": "^13.0.0",
    "ava": "^2.1.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "standard-version": "^6.0.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "cosmiconfig": "^5.2.1",
    "fast-glob": "^3.0.3",
    "fs-extra": "^8.1.0",
    "log-util": "^2.2.1",
    "yargs": "^13.2.4"
  }
}
